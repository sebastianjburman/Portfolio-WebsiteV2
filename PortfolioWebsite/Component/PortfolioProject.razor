<div class="projectContainer">
    <button class="showMoreButton" @onclick="showMoreCard">
        @if(!showMore){
        <svg width="30" height="30" clip-rule="evenodd" fill="white" fill-rule="evenodd" stroke-linejoin="round" stroke-miterlimit="2" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg"><path d="m13 16.75c0-.414-.336-.75-.75-.75h-9.5c-.414 0-.75.336-.75.75s.336.75.75.75h9.5c.414 0 .75-.336.75-.75zm2.195-5.992 2.746 2.999c.142.154.342.243.552.243s.41-.088.553-.242l2.757-2.999c.132-.144.197-.326.197-.507 0-.684-.841-1.008-1.303-.508l-2.202 2.397-2.194-2.396c-.46-.503-1.303-.175-1.303.507 0 .18.065.362.197.506zm-2.195.992c0-.414-.336-.75-.75-.75h-9.5c-.414 0-.75.336-.75.75s.336.75.75.75h9.5c.414 0 .75-.336.75-.75zm0-5c0-.414-.336-.75-.75-.75h-9.5c-.414 0-.75.336-.75.75s.336.75.75.75h9.5c.414 0 .75-.336.75-.75z" fill-rule="nonzero"/></svg>
        }
        else{
            <svg fill="tomato" width="24" height="24" xmlns="http://www.w3.org/2000/svg" fill-rule="evenodd" clip-rule="evenodd"><path d="M24 21h-17l-7-7.972 7-8.028h17v16zm-16.09-14l-5.252 6.023 5.247 5.977h14.095v-12h-14.09zm6.09 4.586l2.586-2.586 1.414 1.414-2.586 2.586 2.586 2.586-1.414 1.414-2.586-2.586-2.586 2.586-1.414-1.414 2.586-2.586-2.586-2.586 1.414-1.414 2.586 2.586z"/></svg>
        }
    </button>
    @if (!showMore)
{
    <div class="portfolioProjectContainer">
    <img src=@ImagePath />
    <h3>@Name</h3>
    </div>
}
else
{
    <div class="portfolioProjectContainerHidden">
    <h2>@Description</h2>
    @if (LinkToProject != null)
    {
        <button class="portfolioProjectContainerHiddenButton" onclick=" window.open('@LinkToProject','_blank')">View Projects</button>
    }
    else
    {
        <button class="noLivePreviewButton">No Live Preview</button>
    }
    <a href=@RepoLink target="_blank" rel="noreferrer">
        <svg xmlns="http://www.w3.org/2000/svg" fill = "white" width="40px" height="40px" viewBox="0 0 24 24"><path d="M19 0h-14c-2.761 0-5 2.239-5 5v14c0 2.761 2.239 5 5 5h14c2.762 0 5-2.239 5-5v-14c0-2.761-2.238-5-5-5zm-4.466 19.59c-.405.078-.534-.171-.534-.384v-2.195c0-.747-.262-1.233-.55-1.481 1.782-.198 3.654-.875 3.654-3.947 0-.874-.312-1.588-.823-2.147.082-.202.356-1.016-.079-2.117 0 0-.671-.215-2.198.82-.64-.18-1.324-.267-2.004-.271-.68.003-1.364.091-2.003.269-1.528-1.035-2.2-.82-2.2-.82-.434 1.102-.16 1.915-.077 2.118-.512.56-.824 1.273-.824 2.147 0 3.064 1.867 3.751 3.645 3.954-.229.2-.436.552-.508 1.07-.457.204-1.614.557-2.328-.666 0 0-.423-.768-1.227-.825 0 0-.78-.01-.055.487 0 0 .525.246.889 1.17 0 0 .463 1.428 2.688.944v1.489c0 .211-.129.459-.528.385-3.18-1.057-5.472-4.056-5.472-7.59 0-4.419 3.582-8 8-8s8 3.581 8 8c0 3.533-2.289 6.531-5.466 7.59z" /></svg>
    </a>
    <h2>Github</h2>
</div>
}
</div>




@code {
    [Parameter]
    public string? Name { get; set; }
    [Parameter]
    public string? ImagePath { get; set; }
    [Parameter]
    public string? Description { get; set; }
    [Parameter]
    public string? LinkToProject { get; set; }
    [Parameter]
    public string? RepoLink { get; set; }

    public bool showMore = false;

    public void showMoreCard()
    {
        showMore = !showMore;
    }

}
